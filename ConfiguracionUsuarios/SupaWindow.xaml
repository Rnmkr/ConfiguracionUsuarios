<Window x:Class="ConfiguracionUsuarios.SupaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfiguracionUsuarios"
        mc:Ignorable="d"
        Title="SupaWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<Rectangle Grid.Column="0" Stroke="#FFABADB3" >-->
        <Rectangle Grid.Column="0" Stroke="#FFABADB3" >
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF1885A1"/>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Name="spAppMenu" ScrollViewer.VerticalScrollBarVisibility="Disabled">

            <!--<Label Content="NS"  FontWeight="Normal"  Margin="0,5,0,0" FontFamily="Consolas" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="1" Height="32" Width="32" FontSize="20"/>-->
            <ToggleButton Grid.Column="0" ToolTip="CERRAR SESIÓN" Name="btnUSUARIOS2" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click" Margin="0,3,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/door.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" ToolTip="USUARIOS" Name="btnUSUARIOS" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click" Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/ConfiguracionUsuarios;component/Resources/32.png" Width="32" Height="32" />
        </ToggleButton>

            <ToggleButton Grid.Column="0" ToolTip="PEDIDOS" Name="btnPEDIDOS" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/ConfiguracionUsuarios;component/Resources/64.png" Width="32" Height="32" />
        </ToggleButton>

            <ToggleButton Grid.Column="0" ToolTip="PRODUCCION" Name="btnPEDIDOS1" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/ConfiguracionUsuarios;component/Resources/aaa.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" ToolTip="EMBALADO" Name="btnPEDIDOS2" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/key.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS3" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/ConfiguracionUsuarios;component/Resources/compo.png" Width="32" Height="32" />
            </ToggleButton>

            <!--<Separator Margin="0,5,0,5" >
                <Separator.RenderTransform>
                    <ScaleTransform ScaleY="2" />
                </Separator.RenderTransform>
            </Separator>-->

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS4" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/ConfiguracionUsuarios;component/Resources/fail.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS5" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/door.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS6"  Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/search.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS7" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/xls.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS8" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/list.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS9" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/key.png" Width="32" Height="32" />
            </ToggleButton>

            <ToggleButton Grid.Column="0" Name="btnPEDIDOS10" Style="{StaticResource roundButtonTemplate32graytoggle}"  VerticalAlignment="Center" Click="Button_Click_1"  Margin="0,2,0,0" HorizontalAlignment="Center" Width="44" Height="44">
                <Image Source="/IngresoPedidos;component/Resources/xls.png" Width="32" Height="32" />
            </ToggleButton>
            
        </StackPanel>

        <ContentControl Grid.Column="1" x:Name="contentControl" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />

    </Grid>
</Window>
